.container {
  font-family:"微软雅黑";
  font-size:22rpx;
  color:#333;
  padding-top:80rpx;
} 
.bc_gray{
  background:#eee;
}
.pub_title{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size:32rpx;
  color:#fff;
  text-align: center;
  background:url(../../images/bc_green.jpg) repeat-x;
}

icon.back{
  position:absolute;
  left:20rpx;
  top:50%;
  width:26rpx;
  height:44rpx;
  margin-top:-22rpx;
  background: url(../../images/back.png) no-repeat;
  background-size:contain;
}
.loading{
  text-align:center;
}
.loading image{
  width:50rpx;
  height:50rpx;
}
